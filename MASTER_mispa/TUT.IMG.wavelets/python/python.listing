t = np.linspace(-1, 1, 1000, endpoint=False)
f1 =  3;
f2 = 50;
sig  = np.sin(2 * np.pi * f1 * t) + np.sin(2*np.pi * f2 * t);
widths = np.arange(1, 129)
coef, freqs=pywt.cwt(sig,widths,'morl')
fig = plt.figure();
